    menu "I2C GPIO configuration"
        depends on HMI_BOARD_CUSTOM
        config I2C_SCL_GPIO
            int "I2C SCL GPIO"
            range 0 46
            default 36
        config I2C_SDA_GPIO
            int "I2C SDA GPIO"
            range 0 46
            default 35
    endmenu

    menu "SPI GPIO configuration"
