                int "LCD D01 GPIO"
                range 0 46
                default 15
            config LCD_D02_GPIO
                int "LCD D02 GPIO"
                range 0 46
                default 14
            config LCD_D03_GPIO
                int "LCD D03 GPIO"
                range 0 46
                default 13
            config LCD_D04_GPIO
                int "LCD D04 GPIO"
                range 0 46
                default 12
            config LCD_D05_GPIO
                int "LCD D05 GPIO"
                range 0 46
                default 11
            config LCD_D06_GPIO
                int "LCD D06 GPIO"
                range 0 46
